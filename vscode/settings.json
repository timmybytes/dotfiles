{
  // ---------------------------------------------------
  // ////////////////////// CORE ///////////////////////
  // ---------------------------------------------------
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true,
    "source.format.json": true,
    "source.format.js": true,
    "source.format.css": true,
    "source.format.html": true
  },
  "editor.codeLens": false,
  "editor.colorDecorators": true,
  "editor.comments.insertSpace": true,
  "editor.cursorBlinking": "phase",
  "editor.cursorWidth": 3,
  "editor.detectIndentation": false,
  "editor.emptySelectionClipboard": false,
  "editor.find.seedSearchStringFromSelection": "selection",
  "editor.foldingHighlight": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.glyphMargin": true,
  "editor.highlightActiveIndentGuide": true,
  "editor.hover.delay": 800,
  "editor.hover.sticky": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineDecorationsWidth": 30, // Margin between line numbers and code
  "editor.linkedEditing": true,
  "editor.matchBrackets": "never",
  "editor.minimap.enabled": false,
  "editor.minimap.maxColumn": 85,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.scale": 1,
  "editor.minimap.side": "right",
  "editor.minimap.size": "fit",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.occurrencesHighlight": false,
  "editor.padding.bottom": 40,
  "editor.padding.top": 20,
  "editor.renderControlCharacters": false,
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "none",
  "editor.roundedSelection": true,
  "editor.scrollbar.horizontal": "visible",
  "editor.scrollbar.horizontalScrollbarSize": 10,
  "editor.scrollbar.verticalScrollbarSize": 10,
  "editor.scrollPredominantAxis": true,
  "editor.smoothScrolling": true,
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  "explorer.autoReveal": "focusNoScroll",
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.badges": true,
  "explorer.incrementalNaming": "smart",
  "explorer.openEditors.visible": 0,
  "explorer.sortOrder": "default",
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/.git": false // Show .git directory by default
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "git.decorations.enabled": true,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "terminal.external.osxExec": "kitty.app",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.scrollback": 10000,
  "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",
  "window.titleBarStyle": "custom",
  "workbench.activityBar.visible": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.pinnedTabSizing": "shrink",
  "workbench.editor.showIcons": true,
  "workbench.editor.showTabs": true,
  "workbench.editor.tabSizing": "shrink",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tips.enabled": false,
  "workbench.tree.indent": 15,
  "workbench.tree.renderIndentGuides": "none",
  "zenMode.fullScreen": false,
  "zenMode.hideActivityBar": true,
  "zenMode.hideLineNumbers": true,
  "zenMode.hideStatusBar": true,
  "zenMode.hideTabs": true,
  // ---------------------------------------------------
  // * * Fonts & Typography () => <= 0 O 1 l
  // ---------------------------------------------------
  "debug.console.fontFamily": "Cascadia Code PL",
  // * * * Ligatures
  // "editor.fontFamily": "JetBrains Mono",
  // "editor.fontFamily": "victor mono",
  // "editor.fontFamily": "monoisome",
  // "editor.fontFamily": "dank mono",
  // "editor.fontFamily": "fira code",
  "editor.fontFamily": "Cascadia Code PL",
  // "editor.fontFamily": "fantasque sans mono",
  // "editor.fontFamily": "Iosevka",
  // * * * No ligatures
  // "editor.fontFamily": "Sometype Mono",
  // "editor.fontFamily": "APL385",
  // "editor.fontFamily": "BPMono",
  // "editor.fontFamily": "Source Code Pro",
  // "editor.fontFamily": "VT323",
  // "editor.fontFamily": "Share Tech Mono",
  // "editor.fontFamily": "operator mono",
  // "editor.fontFamily": "IBM Plex Mono",
  // "editor.fontFamily": "Anonymous Pro",
  "debug.console.wordWrap": false,
  "editor.fontLigatures": "true",
  "editor.fontSize": 14,
  "editor.fontWeight": "400",
  "editor.lineHeight": 28,
  "scm.inputFontFamily": "Cascadia Code PL",
  "terminal.integrated.fontFamily": "Cascadia Code PL",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "400",
  "terminal.integrated.fontWeightBold": "800",
  "terminal.integrated.lineHeight": 1,
  // ---------------------------------------------------
  // * * Intellisense & Autocomplete
  // ---------------------------------------------------
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.autoClosingBrackets": "always",
  "editor.parameterHints.enabled": true,
  "editor.quickSuggestions": true,
  "editor.quickSuggestionsDelay": 0, // instantaneous suggestions
  "editor.snippetSuggestions": "inline",
  "editor.suggest.filterGraceful": true,
  "editor.suggest.insertMode": "replace",
  "editor.suggest.localityBonus": true,
  "editor.suggest.preview": true,
  "editor.suggest.showIcons": true,
  "editor.suggest.showStatusBar": true,
  "editor.suggestFontSize": 14,
  "editor.suggestLineHeight": 18,
  "editor.suggestSelection": "first",
  "editor.wordBasedSuggestions": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // ---------------------------------------------------
  //* Color & Theme
  // ---------------------------------------------------
  "workbench.colorTheme": "In Bed by 7pm",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.hidesExplorerArrows": true,
  "material-icon-theme.showWelcomeMessage": false,
  // Faded icon saturation to better match Forest Night colorscheme
  "material-icon-theme.saturation": 0.8,
  "workbench.colorCustomizations": {
    "[In Bed by 7pm]": {
      "editorSuggestWidget.highlightForeground": "#aa82ee",
      "editorSuggestWidget.selectedBackground": "#666A79"
    },
    "[Everforest Dark]": {
      "activityBar.background": "#2a2426",
      "editor.background": "#2a2426",
      "editor.findMatchBackground": "#2a2426",
      "editorGroupHeader.tabsBackground": "#2a2426",
      "editorHoverWidget.background": "#2a2426",
      "editorHoverWidget.border": "#a7c080",
      "editorHoverWidget.foreground": "#e6d6ac",
      "editorSuggestWidget.background": "#2a2426",
      "editorSuggestWidget.border": "#a7c080",
      "editorSuggestWidget.foreground": "#e6d6ac",
      "editorWidget.background": "#2a2426",
      "inputValidation.errorBackground": "#2a2426",
      "inputValidation.infoBackground": "#2a2426",
      "inputValidation.warningBackground": "#2a2426",
      "panel.background": "#2a2426",
      "panel.border": "#a7c080",
      "peekViewEditor.background": "#2e3440",
      "peekViewResult.background": "#2e3440",
      "quickInput.background": "#2a2426",
      "quickInputTitle.background": "#2a2426",
      "scrollbarSlider.activeBackground": "#e6d6ac",
      "scrollbarSlider.background": "#e6d6ac",
      "scrollbarSlider.hoverBackground": "#ffefc5",
      "searchEditor.findMatchBackground": "#2a2426",
      "sideBar.background": "#2a2426",
      "sideBar.border": "#868d80",
      "sideBarSectionHeader.border": "#868d80",
      "statusBar.background": "#2a2426",
      "statusBar.border": "#c9ffe5",
      "tab.activeBackground": "#2a2426",
      "tab.activeForeground": "#d8caac",
      "tab.border": "#2a2426",
      "tab.hoverBackground": "#868d80",
      "tab.hoverBorder": "#868d80",
      "tab.hoverForeground": "#2a2426",
      "tab.inactiveBackground": "#2a2426",
      "tab.inactiveForeground": "#868d80",
      "tab.unfocusedActiveBackground": "#2a2426",
      "tab.unfocusedActiveForeground": "#868d80",
      "tab.unfocusedHoverBackground": "#868d80",
      "tab.unfocusedHoverForeground": "#2a2426",
      "tab.unfocusedInactiveBackground": "#2a2426",
      "tab.unfocusedInactiveForeground": "#868d80",
      "titleBar.activeBackground": "#2a2426",
      "titleBar.border": "#2a2426",
      "titleBar.inactiveBackground": "#2a2426"
    },
    "editorIndentGuide.activeBackground": "#a7c080"
    // "editorIndentGuide.background": "#2a2426"
  },
  // ---------------------------------------------------
  //* Language-specific rules
  // ---------------------------------------------------
  "html.format.contentUnformatted": "pre,code,textarea",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.autoClosingBrackets": "always"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.autoClosingBrackets": "always"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    // "editor.wordWrap": "on",
    "editor.quickSuggestions": true,
    // "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[mdx]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.formatOnPaste": false
  },

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.autoClosingBrackets": "always"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.autoClosingBrackets": "always"
  },
  "typescript.suggest.autoImports": true,
  // ---------------------------------------------------
  //* Emmet
  // ---------------------------------------------------
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "html-css-class-completion.enableEmmetSupport": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": false,

  // ---------------------------------------------------
  // ////////////////// EXTENSIONS /////////////////////
  // ---------------------------------------------------

  // ---------------------------------------------------
  //* Bracket Pair Colorizer 2
  // ---------------------------------------------------
  "bracket-pair-colorizer-2.activeScopeCSS": [
    "borderStyle : solid",
    "borderWidth : 1px",
    "borderColor : {color}; opacity: 0.5"
  ],
  "bracket-pair-colorizer-2.colorMode": "Independent",
  "bracket-pair-colorizer-2.forceUniqueOpeningColor": true,
  "bracket-pair-colorizer-2.highlightActiveScope": true,
  "bracket-pair-colorizer-2.showHorizontalScopeLine": true,
  "bracket-pair-colorizer-2.showVerticalScopeLine": true,
  "bracket-pair-colorizer-2.scopeLineRelativePosition": true,
  // ---------------------------------------------------
  //* Code UI
  // ---------------------------------------------------
  "codeui.targetingMode": "general",
  // ---------------------------------------------------
  //* Dimmer
  // ---------------------------------------------------
  // Vim-Goyo-like behavior
  "dimmer.enabled": false,
  "dimmer.context": 4,
  "dimmer.opacity": 12,
  "dimmer.delay": 10,
  // ---------------------------------------------------
  //* ESLint
  // ---------------------------------------------------
  "eslint.format.enable": true,
  // ---------------------------------------------------
  //* Git Lens
  // ---------------------------------------------------
  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "history": false,
      "remote": false
    },
    "editorGroup": {
      "blame": true,
      "compare": true
    },
    "editorTab": false,
    "explorer": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "scm": {
      "authors": true
    },
    "scmGroupInline": {
      "stash": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": false,
      "stash": true
    }
  },
  // ---------------------------------------------------
  //* GitHub Copilot
  // ---------------------------------------------------
  "github.copilot.autocomplete.enable": true,
  "github.copilot.advanced": {
    "enable": false,
    "autoComplete": true,
    "autoComplete.maxItems": 10,
    "autoComplete.maxItemsToShow": 10,
    "autoComplete.maxItemsToShowInDropdown": 10
  },
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": true,
    "json": true,
    "yml": true
  },
  // ---------------------------------------------------
  //* Live SASS
  // ---------------------------------------------------
  // NOTE: LiveSassCompiler is no longer maintained and can be buggy
  // Use node-sass with npm for more reliability
  // "liveSassCompile.settings.formats": [
  //   {
  //     "format": "compressed",
  //     "extensionName": ".min.css",
  //     "savePath": null
  //   }
  // ],
  // "liveSassCompile.settings.excludeList": ["**/node_modules/**", ".vscode/**"],
  // "liveSassCompile.settings.generateMap": false,
  // ---------------------------------------------------
  //* Live Server
  // ---------------------------------------------------
  "liveServer.settings.CustomBrowser": "firefox",
  "liveServer.settings.fullReload": true,
  "liveServer.settings.wait": 0,
  "liveServer.settings.port": 5500,
  "liveServer.settings.donotShowInfoMsg": true,
  // ---------------------------------------------------
  //* Markdown Lint
  // ---------------------------------------------------
  "markdownlint.config": {
    // Allow multiple blank lines
    "MD012": false,
    // Line length
    "MD013": false,
    // Allow duplicate headings
    "MD024": false,
    // Allow trailing heading punctuation
    "MD026": false,
    // Allow inline HTML
    "MD033": false,
    // First line should be top-level heading
    "MD041": false
  },
  // ---------------------------------------------------
  //* Markdown Preview Enhanced
  // ---------------------------------------------------
  "markdown-preview-enhanced.automaticallyShowPreviewOfMarkdownBeingEdited": false,
  "markdown-preview-enhanced.previewTheme": "github-light.css",
  // ---------------------------------------------------
  // * Prettier
  // ---------------------------------------------------
  // Keep print width >=100 to avoid closing brackets on empty lines
  "prettier.arrowParens": "avoid",
  "prettier.bracketSpacing": true,
  "prettier.jsxBracketSameLine": true,
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,
  "prettier.proseWrap": "never",
  "prettier.tabWidth": 2,
  // ---------------------------------------------------
  //* Settings Sync
  // ---------------------------------------------------
  "sync.gist": "cf16c02e0234c0c7adbe5c305f30c5b5",
  "sync.autoUpload": true,
  "sync.quietSync": true,
  // ---------------------------------------------------
  //* Tabnine
  // ---------------------------------------------------
  "tabnine.experimentalAutoImports": true,
  // ---------------------------------------------------
  //* TODO Highlight
  // ---------------------------------------------------
  "todohighlight.keywords": [
    {
      "text": "NOTE:",
      "color": "#000",
      "backgroundColor": "#B7CECE",
      "overviewRulerColor": "grey",
      "isWholeLine": false
    },
    {
      "text": "FIXME:",
      "color": "#1d1d1d",
      "backgroundColor": "#ee6868",
      "isWholeLine": true
    },
    {
      "text": "TODO:",
      "color": "#1d1d1d",
      "isWholeLine": false
    }
  ],
  "warmUp.changeCount": "15",
  "markdown.preview.scrollEditorWithPreview": false,
  "markdown.preview.scrollPreviewWithEditor": false,
  "markdown-preview-enhanced.scrollSync": true
}
